---
import { Icon } from 'astro-icon';

const {
	label = 'Toggle Menu',
	class:
		className = 'ml-1.5 text-neutral-700 dark:text-neutral-400 hover:bg-neutral-100 dark:hover:bg-neutral-800 focus:outline-none focus:ring-4 focus:ring-neutral-200 dark:focus:ring-neutral-700 rounded-lg text-sm p-2.5 inline-flex items-center transition',
	iconClass = 'w-6 h-6',
	iconName = 'ri:menu-fill',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
	<Icon name={iconName} class={iconClass} optimize={false} />
</button>
