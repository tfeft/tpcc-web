---
import { getPermalink } from '~/utils/permalinks';

const { authors, class: className = 'text-lg' } = Astro.props;
---

{
	authors && Array.isArray(authors) && (
		<ul class={className}>
			<li class="font-medium tracking-wide text-neutral-500 dark:text-neutral-600">
				<span>By </span>
				{authors.map((author, index) => (
					<span><a href={getPermalink(author, 'author')} class="text-neutral-700 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-secondary-400">{author}</a>{index === authors.length - 2 ? ' & ' : index < authors.length - 1 ? ', ' : ''}</span>
				))}
			</li>
		</ul>
	)
}
